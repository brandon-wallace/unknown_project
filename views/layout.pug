doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/style.css")
        title #{title}
    body
        header
            nav
                ul.menu
                    li.menu__item
                        a(href="/").menu__link home
                    if isAuthenticated
                        li.menu__item
                            a(href="/users/profile").menu__link profile
                        li.menu__item
                            a(href="/users/logout").menu__link logout
                    else
                        li.menu__item
                            a(href="/users/login").menu__link login
                        li.menu__item
                            a(href="/signup").menu__link signup
        main
            if success
                for msg in success
                    p #{ msg }
            if error
                for msg in error
                    p #{ msg }
            block content
        footer

        script(src='../js/script.js')
